[
  {
    "id": "factory-flow",
    "type": "tab",
    "label": "Factory IIoT",
    "disabled": false,
    "info": "LoRaWAN uplink processing, MQTT integration, dashboard, and alarms."
  },
  {
    "id": "mqtt-in-telemetry",
    "type": "mqtt in",
    "z": "factory-flow",
    "name": "ChirpStack uplinks",
    "topic": "application/+/device/+/event/up",
    "qos": "0",
    "datatype": "auto",
    "broker": "mqtt-broker",
    "nl": false,
    "rap": true,
    "rh": 0,
    "inputs": 0,
    "x": 180,
    "y": 120,
    "wires": [["json-parse"]]
  },
  {
    "id": "json-parse",
    "type": "json",
    "z": "factory-flow",
    "name": "Parse JSON",
    "property": "payload",
    "action": "obj",
    "pretty": false,
    "x": 390,
    "y": 120,
    "wires": [["decode-uplink"]]
  },
  {
    "id": "decode-uplink",
    "type": "function",
    "z": "factory-flow",
    "name": "Decode payload",
    "func": "const uplink = msg.payload || {};\nlet decoded = {};\nif (uplink.data) {\n    try {\n        const asJson = Buffer.from(uplink.data, 'base64').toString();\n        decoded = JSON.parse(asJson);\n    } catch (err) {\n        node.warn(`Base64/JSON decode failed: ${err.message}`);\n    }\n}\nconst rxInfo = uplink.rxInfo && uplink.rxInfo[0] ? uplink.rxInfo[0] : {};\nmsg.payload = {\n    sensor: decoded.sensor || uplink.deviceName || 'unknown-sensor',\n    value: typeof decoded.value === 'number' ? decoded.value : decoded.measurement || null,\n    unit: decoded.unit || decoded.type || '',\n    timestamp: decoded.timestamp || rxInfo.time || uplink.publishedAt || new Date().toISOString(),\n    application: uplink.applicationName || 'factory-floor',\n    device: uplink.deviceName || 'device'\n};\nmsg.topic = msg.payload.sensor;\nreturn msg;",
    "outputs": 1,
    "noerr": 0,
    "initialize": "",
    "finalize": "",
    "libs": [],
    "x": 610,
    "y": 120,
    "wires": [["sensor-switch", "chart-formatter", "temp-alert"]]
  },
  {
    "id": "chart-formatter",
    "type": "function",
    "z": "factory-flow",
    "name": "Chart point",
    "func": "const cloned = RED.util.cloneMessage(msg);\ncloned.payload = Number(msg.payload.value);\nreturn cloned;",
    "outputs": 1,
    "noerr": 0,
    "initialize": "",
    "finalize": "",
    "libs": [],
    "x": 850,
    "y": 60,
    "wires": [["trend-chart"]]
  },
  {
    "id": "trend-chart",
