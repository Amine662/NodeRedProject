        "z": "factory-flow",
        "name": "High-temp alarm",
        "func": "if (!msg.payload || typeof msg.payload.value !== 'number') {\n    return null;\n}\nconst isTemp = (msg.payload.sensor || '').toLowerCase().includes('temp');\nif (isTemp && msg.payload.value > 60) {\n    const alertMsg = RED.util.cloneMessage(msg);\n    alertMsg.payload = `High temp: ${msg.payload.value} ${msg.payload.unit}`;\n    return alertMsg;\n}\nreturn null;",
