    "order": 1,
    "width": 0,
    "height": 0,
    "label": "Telemetry",
    "chartType": "line",
    "legend": "true",
    "xformat": "HH:mm:ss",
    "interpolate": "linear",
    "nodata": "waiting for uplinks...",
    "dot": false,
    "ymin": "0",
    "ymax": "80",
    "removeOlder": 1,
    "removeOlderPoints": "120",
    "removeOlderUnit": "3600",
    "cutout": 0,
    "useOneColor": false,
